<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="style.css" />
    <title>Pokémon</title>
  </head>

  <body>
    <header>
      <h1>Pokedex</h1>
    </header>

    <main>
      <section id="cards">
        <% pokedex.forEach((pokemon)=> { %>
        <div class="card">
          <img src="<%= pokemon.imagem %>" alt="" />
          <h2><%= pokemon.nome %></h2>
          <p class="descricao"><%= pokemon.descricao %></p>
          <p class="tipo">Tipo: <%= pokemon.tipo %></p>
          <p class="categoria">Categoria: <%= pokemon.categoria %></p>
          <p class="peso">Peso: <%= pokemon.peso %></p>
          <p class="altura">Altura: <%= pokemon.altura %></p>
          <p class="habilidade">Habilidade: <%= pokemon.habilidade %></p>
          <a href="/update/<%= pokemon.id %>">Editar</a>
        </div>
        <% }) %>
      </section>

      <section id="cadastro">
        <h2>Cadastre um novo Pokemon</h2>

        <form action="/create" method="post">
          <label for="nome">Nome:</label>
          <input type="text" id="nome" name="nome" />

          <label for="descricao">Descrição:</label>
          <input type="text" id="descricao" name="descricao" />

          <label for="tipo">Tipo:</label>
          <input type="text" id="tipo" name="tipo" />

          <label for="imagem">Link da Imagem</label>
          <input type="text" id="imagem" name="imagem" />

          <label for="peso">Peso:</label>
          <input type="text" id="peso" name="peso" />

          <label for="altura">Altura:</label>
          <input type="text" id="altura" name="altura" />

          <label for="categoria">Categoria:</label>
          <input type="text" id="categoria" name="categoria" />

          <label for="habilidade">Habilidade:</label>
          <input type="text" id="habilidade" name="habilidade" />

          <button id="buttoncadastrar" type="submit">Cadastrar</button>
        </form>
      </section>
    </main>
  </body>
</html>
